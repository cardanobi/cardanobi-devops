# Default server configuration
#
server {
	if ($host = mainnet.cardanobi.io) {
		return 301 https://$host$request_uri;
	} # managed by Certbot


	listen 80 ;
	listen [::]:80 ;
	server_name mainnet.cardanobi.io;
	return 404; # managed by Certbot
}

server {
    listen 127.0.0.1:80;
    server_name 127.0.0.1;

    location /nginx_status {
        stub_status;
    }
}



